<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textStyle="bold"
        android:text="version" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoLink="all"
        android:gravity="left"
        android:linksClickable="true"
        android:text="Developer: Mojtaba Shafaei\n\nThis is an open source android app and library that published on github https://github.com/Mojtaba-Shafaei/BottomDialogMenu \n\nDevelopers can use this library in their apps to display a Bottom Dialog and so customize it.\n\nEmail: mjtb.shafaei@gmail.com"
        android:textSize="14sp" />
</LinearLayout>
